<section class="service" id="{{idScroll}}">
	<div class="container">
		<div class="service__inner">
			<div class="service__content">
				<div class="title-2 service__title">{{title}}</div>

				<ul class="service__list">
					{% for item in arrList %}
					<li class="service__item">
						<div class="service__name">{{item.name | safe}}</div>
						<div class="service__text">{{item.value | safe}}</div>
					</li>
					{% endfor %}
				</ul>
			</div>

			<div class="service__slider-wrapper">
				<div class="service__right swiper-container">
					<div class="swiper-wrapper service__slider">
						<div class="swiper-slide service__slide">
							<div class="service__slide-inner">
								<img src="img/coffe-formats/1.jpg" alt="">
							</div>
						</div>
						<div class="swiper-slide service__slide">
							<div class="service__slide-inner">
								<img src="img/coffe-formats/2.jpg" alt="">
							</div>
						</div>
						<div class="swiper-slide service__slide">
							<div class="service__slide-inner">
								<img src="img/coffe-formats/3.jpg" alt="">
							</div>
						</div>
					</div>

					<div class="service__row">
						<div class="service__scrollbar swiper-scrollbar"></div>

						<div class="service__btns">
							<button class="service__nav service__nav--prev">Свайп назад</button>
							<div class="service__pagination swiper-pagination"></div>
							<button class="service__nav service__nav--next">Свайп вперед</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>